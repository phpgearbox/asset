{
	"name": "gears/asset",
	"description": "An Asset Minfication Pipeline for the Robo Task Runner.",
	"homepage": "https://github.com/phpgearbox/asset",
	"keywords": ["minification", "javascript", "stylesheets", "css", "robo"],
	"license": "MIT",
	"autoload":
	{
		"psr-4": { "Gears\\": "src" }
	},
	"require":
	{
		"codegyre/robo": "*",
		"tedivm/jshrink": "*",
		"natxet/CssMin": "*",
		"oyejorge/less.php": "*",
		"leafo/scssphp": "*",
		"symfony/finder": "*",
		"gears/string": "*"
	},
	"require-dev":
	{
		"phpunit/phpunit": "4.*",
		"bower-asset/jquery": "2.1.1",
		"bower-asset/bootstrap": "3.3.1",
		"bower-asset/bootstrap-sass": "3.0.2",
		"bower-asset/pure": "0.5.0"
	},
	"scripts":
	{
		"pre-install-cmd": "Gears\\Asset\\Composer::installFxpPlugin",
		"pre-update-cmd": "Gears\\Asset\\Composer::updateFxpPlugin"
	}
}